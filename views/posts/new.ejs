
    <% layout('layouts/boilerplate') -%>
    <h1>New Post</h1>
    <!--
        multer
    enctype="multipart/form-data"
    type="file" accept="images/*" name="images" multiple
    -->
    <form action="/posts" method="POST" enctype="multipart/form-data">
        <div><input type="text" name="post[title]" placeholder="タイトル"></div>
        <div><input type="number" name="post[price]" step=".01" placeholder="金額"></div>
        <div>
            <input type="file" accept="images/*" name="images" multiple />
        </div>
        <div>
            <textarea type="text" name="post[description]" placeholder="内容"></textarea>
        </div>
        <div><input type="text" name="post[location]" placeholder="Location"></div>

        <input type="submit">
    </form>


