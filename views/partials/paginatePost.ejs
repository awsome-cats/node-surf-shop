<div style="margin:20px 0;">
<% if(posts.page -1) { %>
    <a href="/posts?page=<%= posts.page -1 %>">前に戻る</a>
<% } %>

<% for(let i=1; i <= posts.pages;i++) {%>
    <a href="/posts?page=<%= i %>"
        <%= i === posts.page ? 'style=color:#000;': ''%>
    ><%= i %></a>
<% } %>
<% if((posts.page + 1) <= posts.pages) { %>
    <a href="/posts?page=<%= posts.page + 1 %>">次に行く</a>
<% } %>
</div>